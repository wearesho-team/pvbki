{
  "name": "wearesho-team/pvbki",
  "description": "PVBKI API integration",
  "type": "library",
  "require": {
    "php": ">=7.2",
    "ext-SimpleXML": "*",
    "ext-dom": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3",
    "horat1us/environment-config": "^1.2",
    "myclabs/php-enum": "^1.6.3",
    "nesbot/carbon": "^1.33",
    "spatie/array-to-xml": "^2.8",
    "wearesho-team/base-collection": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "authors": [
    {
      "name": "Roman Varkuta",
      "email": "roman.varkuta@gmail.com"
    },
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Wearesho\\Pvbki\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Pvbki\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit"
  }
}
